<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="AppBarStyle">
        <item name="colorPrimary">@color/transparent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- Text Styles -->
    <style name="BaseText">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/baseTitleTextColor</item>
    </style>

    <style name="FragmentTitleText" parent="BaseText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="layout_goneMarginTop">24dp</item>
    </style>

    <style name="AlertTitleText" parent="BaseText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:textSize">34sp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="layout_goneMarginTop">24dp</item>
    </style>

    <style name="FragmentAppVersionText" parent="BaseText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/baseTitleTextColor</item>
        <item name="layout_goneMarginTop">24dp</item>
    </style>

    <style name="DisclosureTitleText" parent="BaseText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">34sp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="layout_goneMarginTop">24dp</item>
    </style>

    <style name="FragmentSubtitleText" parent="BaseText">
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/baseSubtitleTextColor</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="layout_goneMarginTop">24dp</item>
    </style>

    <style name="BottomSheetTitle" parent="FragmentTitleText">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="BaseTitleText" parent="BaseText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BaseSubtitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/pf_din_display_pro_regular</item>
        <item name="android:textColor">@color/baseSubtitleTextColor</item>
    </style>

    <style name="TextInputLayoutOutlinedBoxBase" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textColorHint">@color/tilHintColor</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/baseTitleTextColor</item>
    </style>

    <style name="TextInputLayoutFilledBoxBase" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:textColorHint">@color/tilHintColor</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="borderWidth">3dp</item>
        <item name="boxStrokeColor">@color/localiza_light_green</item>
        <item name="boxStrokeWidth">3dp</item>
        <item name="boxStrokeWidthFocused">4dp</item>
        <item name="boxCollapsedPaddingTop">8dp</item>
    </style>

    <style name="TextMiniTitle" parent = "BaseTitleText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ErrorTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/pf_din_display_pro_regular</item>
        <item name="android:textColor">@color/baseTitleTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="DisclosePermissionText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/baseTitleTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Button Styles -->
    <style name="BackButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="BaseTextButton" parent="BaseText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:drawablePadding">16dp</item>
    </style>

    <style name="BaseButton">
        <item name="android:layout_height">58dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/pf_din_display_pro_regular</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="GreenButton" parent="BaseButton">
        <item name="android:backgroundTint">@drawable/button_green_state</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="RedButton" parent="BaseButton">
        <item name="android:backgroundTint">@color/confirm_error</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="CustomDivider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:background">@color/lineViewColor</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="navTextActive">
        <item name="android:textColor">#00984A</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="fontFamily">@font/pf_din_display_pro_regular</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Widget.Localiza.OutlineButtonNoConnection" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">true</item>
        <item name="strokeColor">#00984A</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">#00984A</item>
        <item name="strokeWidth">1.3dp</item>
    </style>

    <!-- search address -->
    <style name="SearchTitle" parent="BaseTitleText">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SearchTutorial">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="SearchTutorial.Title" parent="SearchTutorial">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SearchTutorial.Content" parent="SearchTutorial">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SearchSuggest">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/baseTitleTextColor</item>
    </style>

    <!--Trip Details-->
    <style name="TripDetailsSubTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pf_din_display_pro_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/baseTitleTextColor</item>
    </style>

    <style name="TripDetailsStatusOk">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/confirm_success</item>
    </style>

    <style name="TripDetailsStatusError">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/confirm_error</item>
    </style>

    <style name="TripDetailsContent.LinearLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TripDetailsContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/baseTitleTextColor</item>
        <item name="android:fontFamily">@font/pf_din_display_pro_regular</item>
    </style>

    <style name="TripDetailsContent.MoreText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/baseTitleTextColor</item>
        <item name="android:fontFamily">@font/pf_din_display_pro_regular</item>
    </style>

    <style name="PlaceHolderText">
        <item name="android:layout_width">199dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/baseSubtitleTextColor</item>
        <item name="android:fontFamily">@font/pf_din_display_pro_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="WhiteProgressBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/pf_din_display_pro_regular</item>
    </style>

    <style name="BottomMenuTextAppearance.Active" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/pf_din_display_pro_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomMenuTextAppearance.Inactive" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/pf_din_display_pro_regular</item>
    </style>

</resources>
